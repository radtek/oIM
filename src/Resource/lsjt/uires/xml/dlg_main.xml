<SOUI name="mainWindow" trCtx="dlg_main" title="@string/title" bigIcon="ICON_LOGO:32" smallIcon="ICON_LOGO:16" width="712" height="502" sendWheel2Hover="1" maxInset="5,3,10,10" margin="5,3,5,7" resizable="1" wndType="appMain" appWnd="0" minsize="600,400" translucent="1">
  <root skin="skin.sys.bkgnd" cache="1">
    <style>
      <class name="cls_maintab_client" width="-2" height="50dp" bindtabname="maintab_client" />
    </style>>
    <window name="skin.theme" skin="_skin.sys.wnd.bkgnd" pos="5,3,-6,-7">
      <window pos="0,[0,-0,-0">
        <!-- 左边主工具栏 -->
        <caption name="mainbar_caption" pos="0,0,@60,-0" colorBkgnd="@color/theme">
          <img name="btn_head" skin="skin.headimg" pos="10dp,10dp,@40dp,@40dp" margin-x="0" />
          <window pos="0dp,[10dp,-0,@-0" layout="vbox">
            <tabbtn name="btn_mainbar_session" skin="skin.mainbar.session" tip="@string/mainbar_session" width="-2" height="50dp" bindtabname="maintab_client" bindtabindex="0" checked="1"/>
            <tabbtn name="btn_mainbar_contact" skin="skin.mainbar.contact" tip="@string/mainbar_contact" width="-2" height="50dp" bindtabname="maintab_client" bindtabindex="1" />
            <tabbtn name="btn_mainbar_webapps" skin="skin.mainbar.webapps" tip="@string/mainbar_webapps" width="-2" height="50dp" bindtabname="maintab_client" bindtabindex="2" />
            <tabbtn name="btn_mainbar_collect" skin="skin.mainbar.collect" tip="@string/mainbar_collect" width="-2" height="50dp" bindtabname="maintab_client" bindtabindex="3" />
          </window>
          <button name="btn_mainbar_msgmgr" skin="skin.mainbar.msgmgr" tip="@string/mainbar_msgmgr" pos="0dp,]-50dp,@60dp,@50dp" />
          <button name="btn_mainbar_setting" skin="skin.mainbar.setting" tip="@string/mainbar_setting" pos="0dp,-50dp,@60dp,@50dp" />
        </caption>
        <!-- 右边客户区 -->
        <window pos="[0,0,-0,-0">
          <!-- 标题栏 -->
          <caption class="cls_sys_caption" height="25">
            <imgbtn name="btn_close" class="cls_sys_close"/>
            <imgbtn name="btn_max" class="cls_sys_max" />
            <imgbtn name="btn_restore" class="cls_sys_restore" />
            <imgbtn name="btn_min" class="cls_sys_min" />
          </caption>
          <!-- 客户区 -->
          <tabctrl name="maintab_client" pos="0,[0,-0,-0" animateSteps="0" tabHeight="0" cursel="0">
            <page title="Session">
              <include src="LAYOUT:MAIN_SESSION_PAGE"/>
            </page>
            <page title="Contact">
              <include src="LAYOUT:MAIN_CONNACT_PAGE"/>
            </page>
            <page title="Webapp">
              <include src="LAYOUT:MAIN_WEBAPPS_PAGE"/>
            </page>
            <page title="Collect">
              <include src="LAYOUT:MAIN_COLLECT_PAGE"/>
            </page>
          </tabctrl>
        </window>
      </window>
    </window>
  </root>
</SOUI>
